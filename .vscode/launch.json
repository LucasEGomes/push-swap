	"version": "0.2.0",
	"configurations": [
		{
			"name": "Push swap",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/push_swap",
			"args": [
				"${input:numbers}"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Build push swap program"
		},
		{
			"name": "Checker",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/checker",
			"args": [
				"${input:numbers}",
				// "<", // Uncomment to send a file as standard input
				// "${workspaceFolder}/operations.txt",
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Build checker program",
			// "preLaunchTask": "Run push swap", // Uncomment to run push swap
		}

	],
	"inputs": [
		{
			"id": "numbers",
			"description": "Number list to be sorted.",
			"type": "promptString",
			"default": "100 3 0 44 5 8"
		}
	]
}